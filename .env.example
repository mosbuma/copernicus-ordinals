# Network Configuration
NEXT_PUBLIC_NETWORK=testnet # or mainnet
NEXT_PUBLIC_APP_TITLE=Copernicus II # or Copernicus II Testnet

# UniSat API Configuration
UNISAT_API_KEY_MAINNET=your_mainnet_api_key_here
UNISAT_API_KEY_TESTNET=your_testnet_api_key_here

# Key Storage Configuration
KEY_STORAGE_PATH=/path/to/secure/storage
ALLOW_KEY_RESET=false # Set to true to enable key reset functionality

# Server Configuration
PORT=3000
HOST=0.0.0.0

# Security
ENCRYPTION_KEY=your_encryption_key_here # For encrypting sensitive data

# Development
NODE_ENV=development
DEBUG=false

# Raspberry Pi Specific
WIFI_INTERFACE=wlan0
POWER_MONITORING=true 